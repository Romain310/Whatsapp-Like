{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <script type="text/javascript">
            window.location.href = "{{ path('conversation') }}";
        </script>
    {% endif %}

    {% if not app.user %}
        <div class="container-fluid h-100">
            <div class="row h-100">
                <div class="col-6 m-auto">
                    <form method="post" class="border border-light p-2 border-2 rounded-2 m-auto">
                        <img alt="Logo Limayrac" src="{{ asset('images/logo.png') }}" class="rounded mx-auto d-block img-fluid">
                        <h1 class="h3 mb-3 font-weight-normal text-center"><b>Connexion</b></h1>
                        <div class="mb-3">
                            <label for="username" class="col-form-label">Adresse email</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                            <a href="{{ path('app_register') }}" class="btn btn-secondary">S'inscrire</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}




