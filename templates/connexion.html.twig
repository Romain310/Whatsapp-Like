<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Connexion</title>
    <link rel="stylesheet" href="{{ asset('styles/global.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/pages/connexion.css') }}">
</head>
<body>
<div class="login-container">
    <img class="logo" src="{{ asset('images/logo.png') }}">
    <h1 id="form-title">Se connecter</h1>

    <!-- Formulaire de connexion -->
    <form id="login-form" method="post" action="{{ path('connexion') }}">
        <input type="text" name="username" placeholder="Identifiant" required>
        <input type="password" name="password" placeholder="Mot de passe" required>
        <button type="submit"><b>Valider</b></button>
    </form>

    <!-- Formulaire de réinitialisation de mot de passe -->
    <form id="reset-form" class="hidden" method="post" action="{{ path('connexion') }}">
        <input type="email" name="email" placeholder="Adresse e-mail" required>
        <button type="submit"><b>Réinitialiser</b></button>
    </form>

    <div class="forgot-create">
        <a href="#" id="toggle-link">Mot de passe oublié</a>
    </div>
</div>

<script>
    document.getElementById('toggle-link').addEventListener('click', function(event) {
        event.preventDefault();
        var loginForm = document.getElementById('login-form');
        var resetForm = document.getElementById('reset-form');
        var formTitle = document.getElementById('form-title');
        var toggleLink = document.getElementById('toggle-link');

        if (loginForm.classList.contains('hidden')) {
            loginForm.classList.remove('hidden');
            resetForm.classList.add('hidden');
            formTitle.textContent = 'Se connecter';
            toggleLink.textContent = 'Mot de passe oublié';
        } else {
            loginForm.classList.add('hidden');
            resetForm.classList.remove('hidden');
            formTitle.textContent = 'Réinitialiser le mot de passe';
            toggleLink.textContent = 'Se connecter';
        }
    });
</script>
</body>
</html>
