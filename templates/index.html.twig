{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row">

            <div class="d-none d-lg-block">
                {% include 'index/index-navbar-lg.html.twig' %}
            </div>
            <div class="d-block d-lg-none">
                {% include 'index/index-navbar-sm.html.twig' %}
            </div>

        </div>

        <div class="row" style="height: 89vh; overflow: unset;">

            <div class="d-none d-lg-block col-lg-3" style="height: 100%">
                <div class="overflow-y-auto" style="max-height: 95%">
                    {% include 'index/index-card.html.twig' %}
                    <div class="d-lg-none">
                        <hr>
                        {% include 'index/index-navbar-sm.html.twig' %}
                    </div>
                    <hr class="opacity-0">
                </div>
            </div>

            <div class="col-12 col-lg-9 " style="height: 100%">
                <div id="messageContainer" class="overflow-y-auto bg-light border-2 rounded-2" style="height: 95%">
                    {% include 'index/index-messages.html.twig' %}
                    {% include 'index/index-envoi-messages.html.twig' %}
                </div>
            </div>

        </div>

    </div>

    <script>
        const messageContainer = document.getElementById('messageContainer');
        messageContainer.scrollTop = messageContainer.scrollHeight;
    </script>

{% endblock %}