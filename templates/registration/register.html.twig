{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {{ form_errors(registrationForm) }}

    {% if app.user %}
        <script type="text/javascript">
            window.location.href = "{{ path('home') }}";
        </script>
    {% endif %}

    {% if not app.user %}



        <div class="container-fluid h-100">
            <div class="row h-100">
                <div class="col-6 m-auto">
                    <div class="border border-light p-2 border-2 rounded-2 m-auto">

                        <img alt="Logo Limayrac" src="{{ asset('images/logo.png') }}" class="rounded mx-auto d-block img-fluid">
                        <h1 class="h3 mb-3 font-weight-normal text-center"><b>S'inscrire</b></h1>

                        {{ form_start(registrationForm) }}

                        <div class="mb-3 form-control">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="mb-3 form-control">
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                        <div class="mb-3 form-control">
                            {{ form_row(registrationForm.mail) }}
                        </div>
                        <div class="mb-3 form-control">
                            {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                        </div>
                        {{ form_row(registrationForm.agreeTerms) }}
                        <div class="row text-center">
                            {{ form_end(registrationForm) }}
                            <a href="{{ path('app_login') }}"><button type="submit" class="btn btn-secondary">Se connecter</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
